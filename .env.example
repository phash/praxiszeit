# Database
POSTGRES_USER=praxiszeit
POSTGRES_PASSWORD=<sicheres-passwort>
POSTGRES_DB=praxiszeit

# Environment: "development" (default) or "production"
# In production: Swagger/ReDoc docs are disabled
ENVIRONMENT=development

# Backend - Security
# Generate SECRET_KEY with: python -c "import secrets; print(secrets.token_hex(64))"
# MUST be at least 32 characters, no default/example values accepted!
SECRET_KEY=<generierter-key-mindestens-64-hex-zeichen>
DATABASE_URL=postgresql://praxiszeit:<pw>@db:5432/praxiszeit
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - comma-separated allowed origins
# WARNING: Never use "*" in production! Set your actual domain(s).
CORS_ORIGINS=http://localhost,http://localhost:5173

# Initial Admin Account
# Change the password immediately after first login!
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@praxis.local
ADMIN_PASSWORD=<initiales-admin-pw>
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=Praxis

# Grafana (change default password!)
GRAFANA_ADMIN_PASSWORD=<sicheres-grafana-passwort>
